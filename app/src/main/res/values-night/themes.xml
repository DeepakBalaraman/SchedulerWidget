<resources>
    <!-- Base application theme. -->
    <style name="Theme.ScheduleWidget" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ScheduleWidget.AppWidgetInnerView" parent="Theme.Material3.DynamicColors.Dark">
        <item name="android:id">@android:id/background</item>
        <item name="android:textColor">?attr/colorOnPrimaryContainer</item>
        <item name="android:startColor">?attr/colorPrimaryContainer</item>
        <item name="android:endColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Theme.ScheduleWidget.AppWidgetHeader" parent="Theme.ScheduleWidget.AppWidgetInnerView">
        <item name="android:textColor">?attr/colorTertiary</item>
        <item name="android:startColor">?attr/colorTertiaryContainer</item>
        <item name="android:endColor">?attr/colorOnTertiary</item>
    </style>
</resources>