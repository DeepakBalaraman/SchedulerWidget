<resources>
    <!-- Base application theme. -->
    <style name="Theme.ScheduleWidget" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <!-- Customize your theme here. -->
<!--        <item name="colorPrimaryInverse">@color/my_app_primary_inverse</item>-->
<!--        <item name="colorPrimaryContainer">@color/my_app_primary_container</item>-->
<!--        <item name="colorOnPrimaryContainer">@color/my_app_on_primary_container</item>-->
<!--        <item name="colorSecondaryContainer">@color/my_app_secondary_container</item>-->
<!--        <item name="colorOnSecondaryContainer">@color/my_app_on_secondary_container</item>-->
<!--        <item name="colorTertiary">@color/my_app_tertiary</item>-->
<!--        <item name="colorOnTertiary">@color/my_app_on_tertiary</item>-->
<!--        <item name="colorTertiaryContainer">@color/my_app_tertiary_container</item>-->
<!--        <item name="colorOnTertiaryContainer">@color/my_app_on_tertiary_container</item>-->
    </style>

    <style name="Theme.ScheduleWidget.AppWidgetContainerParent" parent="Theme.Material3.DynamicColors.DayNight">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="Theme.ScheduleWidget.AppWidgetContainer"
        parent="Theme.ScheduleWidget.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">0.5dp</item>
        <item name="android:colorBackground">?android:attr/colorBackgroundFloating</item>
    </style>

    <style name="Theme.ScheduleWidget.AppWidgetInnerView" parent="Theme.Material3.DynamicColors.DayNight">
        <item name="android:id">@android:id/background</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:startColor">?attr/colorPrimary</item>
        <item name="android:endColor">?attr/colorOnPrimaryContainer</item>
    </style>

    <style name="Theme.ScheduleWidget.AppWidgetHeader" parent="Theme.ScheduleWidget.AppWidgetInnerView">
        <item name="android:textColor">?attr/colorOnTertiary</item>
        <item name="android:startColor">?attr/colorTertiary</item>
        <item name="android:endColor">?attr/colorOnTertiaryContainer</item>
    </style>

    <style name="Theme.ScheduleWidget.EditTextTheme" parent="Theme.Material3.DynamicColors.DayNight">
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">?attr/colorPrimary</item>
        <item name="colorControlHighlight">@color/teal_200</item>
    </style>

</resources>